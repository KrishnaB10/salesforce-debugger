<!DOCTYPE html>
<html ng-app ="SDebugger">
  <head>
    <title>Salesforce Debugger</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src = "/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src = "/javascripts/angular.min.js"></script>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
   	<script src="javascripts/bootstrap.min.js"></script>
 	<script src="/javascripts/bootstrap.min.js"></script>
 	<script src="/socket.io/socket.io.js"></script>
 	<script src="/javascripts/app.js"></script>
  </head>


    <body ng-controller="MainCtrl">
    	   	<div class="container-fluid">
				<h1>Debug Logger</h1>
				<div class="row">
					<div class="col-md-4">
						<form>
							<div class="form-group">
							<input type="text" class="form-control" id="orgId" placeholder="Org Id" ng-model = "sDebuggerId" />
							</div>
						</form>		
					</div>
					<div class="col-md-8">
						<div class="form-group">
							<button type="submit" class="btn btn-default" id = "subscribeBtn" ng-click="subscribe()">Subscribe</button>
						</div>
					</div>
				</div>
			</div>
			<div class="container-fluid" >
				<div class="row">
					<div classgit s="col-md-8">
						
							<div class="form-group">
							<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Search" ng-model = "searchedData">
							</div>
					
					</div>
				</div>
				<div class="container-fluid json-wrp" ng-repeat="log in logsData | filter:searchedData">
					<div class="row json-ctn">
						<div class="col-md-6">
							<h3>{{log.logName}}</h3>
						</div>
						<div class="col-md-3 col-md-offset-3 header-sides">
								<ul class="list-inline">
									<li>5-21-2015 10:38 PM Thursday</li>
									<li><span class="glyphicon glyphicon-remove crossIcon" ng-click="deleteLog($index)" title = "Delete log"></span></li>
								</ul>
						</div>
					</div>	
					<div class="row">
						<div class="col-md-6 col-md-offset-6" style="padding-right: 0">
							<ul class="list-inline utils">
								<li>Pretty</li><li>Copy</li>
							</ul>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<code>
								{{log.logs}}
							</code>
						</div>
					</div>
				</div>
				
			</div>

			
	</body>

	
</html>
